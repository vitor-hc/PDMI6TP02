<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDMI6TP02.Views.CadastroProduto" Title="Produto">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Entry Placeholder="Código"
                   x:Name="txtId" />
            <Editor Placeholder="Descrição"
                   x:Name="txtDescricao" 
                   HeightRequest="130" />
            <Entry Placeholder="Categoria"
                   x:Name="txtCategoria" />
            <Entry Placeholder="Quantidade"
                   x:Name="txtQuantidade" />
            <Entry Placeholder="Preço"
                   x:Name="txtPreco" />

            <Button Text="Salvar"
                    Clicked="btnSave" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>