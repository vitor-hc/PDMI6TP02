<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDMI6TP02.Views.EstiloDinamico">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry Placeholder="Pesquisa" />

            <Button x:Name = "btnAlterarEstilo"  
            Text = "ALTERAR ESTILO" 
            Clicked = "btnAlterarEstiloClicked"
            />

            <Label x:Name = "labelHour"
                   Text="Horário"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0, 25, 0, 0" />
            <Label x:Name= "labelClock"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>